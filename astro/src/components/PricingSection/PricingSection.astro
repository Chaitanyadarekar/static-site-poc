---
import styles from './PricingSection.module.css';
import PricingCard from '../PricingCard/PricingCard.astro';
import { PRICING_PLANS } from '../../constants/pricing.js';
---

<section class={styles.section} id="pricing">
  <div class={styles.sectionContent}>
    <div class={styles.pricingSection}>
      <h2 class={styles.pricingTitle}>Simple, Transparent Pricing</h2>
      <p class={styles.pricingSubtitle}>
        Choose the plan that works best for you. All plans include our core features.
      </p>
      <div class={styles.pricingGrid}>
        {PRICING_PLANS.map((plan) => (
          <PricingCard 
            name={plan.name}
            price={plan.price}
            currency={plan.currency}
            period={plan.period}
            features={plan.features}
            buttonText={plan.buttonText}
            buttonVariant={plan.buttonVariant}
            featured={plan.featured}
            featuredBadge={plan.featuredBadge}
          />
        ))}
      </div>
    </div>
  </div>
</section>