---
import heroImage from '../../assets/images/hero-image.png';
import styles from './HeroSection.module.css';
---

<section class={styles.section}>
  <div class={styles.sectionContent}>
    <div class={styles.heroContent}>
      <div class={styles.heroText}>
        <h1 class={styles.heroTitle}>Welcome to Your Dark Mode Site</h1>
        <p class={styles.heroDescription}>
          A modern, responsive website built with Astro, designed for the dark web experience.
        </p>
        <div class={styles.heroCta}>
          <a href="/about-us" class:list={[styles.btn, styles.btnPrimary]}>Explore Now</a>
        </div>
      </div>
      <div class={styles.heroImage}>
        <img src={heroImage.src} alt="Hero illustration" loading="lazy" />
      </div>
    </div>
  </div>
</section>