---
import { DESIGN_TOKENS, cn } from '@/tailwind-styled/utils/designTokens';

const VALUES = [
  {
    title: 'Innovation',
    description: 'We constantly explore new technologies and approaches to solve complex problems.'
  },
  {
    title: 'Quality',
    description: 'Every line of code and every design decision is made with quality in mind.'
  },
  {
    title: 'Collaboration',
    description: 'We believe the best results come from working together and sharing knowledge.'
  }
];
---

<div class="values-section">
  <h2 class={cn(DESIGN_TOKENS.typography.h3, DESIGN_TOKENS.colors.text.primary, 'mb-8')}>Our Values</h2>
  
  <div class="tab-container">
    <div class="flex space-x-4 mb-8">
      {VALUES.map((value, index) => (
        <button 
          class={cn(
            'tab-button px-6 py-3 rounded-lg font-semibold transition-all duration-300',
            'bg-slate-700 text-slate-300 hover:bg-slate-600',
            'data-[active=true]:bg-primary data-[active=true]:text-white'
          )}
          data-tab={index}
          data-active={index === 0 ? "true" : "false"}
          type="button"
        >
          {value.title}
        </button>
      ))}
    </div>
    
    <div class="tab-content">
      {VALUES.map((value, index) => (
        <div 
          class="tab-pane hidden data-[active=true]:block"
          data-pane={index}
          data-active={index === 0 ? "true" : "false"}
        >
          <div class={cn(DESIGN_TOKENS.layout.card, 'p-8')}>
            <h3 class={cn(DESIGN_TOKENS.typography.h4, 'text-primary mb-4')}>{value.title}</h3>
            <p class={cn(DESIGN_TOKENS.typography.bodyLarge, DESIGN_TOKENS.colors.text.secondary)}>
              {value.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<script>
  import { initTabSwitching } from '@/tailwind-styled/scripts/about/tabSwitching';
  initTabSwitching();
</script>