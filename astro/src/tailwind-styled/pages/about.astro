---
import Layout from '@/tailwind-styled/layouts/Layout/Layout.astro';
import AboutStory from '@/tailwind-styled/components/about/AboutStory.astro';
import AboutValues from '@/tailwind-styled/components/about/AboutValues.astro';
import AboutTeam from '@/tailwind-styled/components/about/AboutTeam.astro';
import AboutHero from '@/tailwind-styled/components/about/AboutHero.astro';
---

<Layout title="About Us - YourSite" currentPath="/about">
  <AboutHero />
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-8 grid grid-cols-1 lg:grid-cols-2 gap-16">
      <AboutStory />
      <AboutValues />
    </div>
  </section>
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-8">
      <AboutTeam />
    </div>
  </section>
</Layout>