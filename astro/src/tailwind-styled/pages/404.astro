---
import Layout from '@/tailwind-styled/layouts/Layout/Layout.astro';
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="min-h-screen flex items-center bg-gradient-to-br from-slate-900 to-red-900">
    <div class="max-w-7xl mx-auto px-6 py-20 text-center">
      <div class="relative">
        <h1 class="text-9xl md:text-[12rem] font-black text-white/10 select-none">
          404
        </h1>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center">
            <h2 class="text-4xl md:text-6xl font-bold text-white mb-6">
              Page Not Found
            </h2>
            <p class="text-xl md:text-2xl text-slate-300 mb-12 max-w-2xl mx-auto">
              Oops! The page you're looking for seems to have wandered off into the digital void.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-4 px-8 rounded-lg transition-colors">
                Go Home
              </a>
              <a href="javascript:history.back()" class="border border-white/20 hover:bg-white/10 text-white font-semibold py-4 px-8 rounded-lg transition-all">
                Go Back
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Animated elements -->
      <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-6 text-center hover:scale-105 transition-transform">
          <h3 class="text-lg font-bold text-white mb-2">Explore</h3>
          <p class="text-slate-300 text-sm">Check out our homepage</p>
        </div>
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-6 text-center hover:scale-105 transition-transform">
          <h3 class="text-lg font-bold text-white mb-2">Learn</h3>
          <p class="text-slate-300 text-sm">Visit our about page</p>
        </div>
        <div class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-6 text-center hover:scale-105 transition-transform">
          <h3 class="text-lg font-bold text-white mb-2">Experience</h3>
          <p class="text-slate-300 text-sm">View our animations</p>
        </div>
      </div>
    </div>
  </section>
</Layout>