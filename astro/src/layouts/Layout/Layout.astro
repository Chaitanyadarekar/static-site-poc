---

import '@styles/lazyLoading.css';
import '@styles/reset.css';
import '@styles/utilities.css';
import Footer from './Footer.astro';
import Navbar from './Navbar.astro';
import { DESIGN_TOKENS } from './designTokens';
import type { LayoutProps as Props } from './models';

const { 
  title, 
  description = 'A modern static site built with Astro',
  currentPath = '/'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  
  <body>
    <div class="layout">
      <Navbar currentPath={currentPath} />
      
      <main class="main">
        <slot />
      </main>
      
      <Footer />
    </div>
  </body>
</html>
  

<style define:vars={DESIGN_TOKENS} is:global>
  /* Layout Styles */
  .layout {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .main {
    flex: 1;
  }
</style>

<script>
  import { initLazyLoading } from './lazyLoading';
  initLazyLoading();
</script>
