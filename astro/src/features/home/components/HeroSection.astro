---
import heroImage from '@assets/images/hero-image.png';
---

<section class="hero-section">
  <div class="section-content">s
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Welcome to Your Dark Mode Site</h1>
        <p class="hero-description">
          A modern, responsive website built with Astro, designed for the dark web experience.
        </p>
        <div class="hero-cta">
          <a href="/about" class="btn btn-primary">Explore Now</a>
        </div>
      </div>
      <div class="hero-image">
        <img src={heroImage.src} alt="Hero illustration" loading="lazy" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    height: 900px;
    display: flex;
    align-items: center;
    width: 100%;
  }

  .section-content {
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .hero-content {
    display: flex;
    gap: var(--space-3xl);
    align-items: center;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  .hero-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
    line-height: var(--line-height-tight);
  }

  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 500px;
    margin-bottom: var(--space-xl);
  }

  .hero-cta {
    margin-top: var(--space-lg);
  }

  .btn {
    display: inline-block;
    padding: var(--space-md) var(--space-2xl);
    border-radius: var(--radius-lg);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    font-size: var(--font-size-lg);
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--text-inverse);
  }

  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .hero-image {
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image img {
    max-width: 100%;
    height: 560px;
    object-fit: contain;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
  }

  @media (max-width: 768px) {
    .hero-content {
      flex-direction: column;
      gap: var(--space-xl);
      text-align: center;
    }

    .hero-title {
      font-size: var(--font-size-4xl);
    }

    .hero-description {
      font-size: var(--font-size-lg);
      max-width: 100%;
    }

    .hero-image img {
      height: 400px;
    }
  }
</style>